<div class="container">
    {% for label, messages in app.flashes() %}
        {% for message in messages %}
            <div class="row">
                <div class="alert alert-{{ label }} alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>{{ message }}</strong>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>